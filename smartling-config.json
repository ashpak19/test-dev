{
    "locales" : [
        {
            "smartling"   : "zh-CN",
            "application" : "zh-CHS"
        },
        {
            "smartling"   : "nl-NL",
            "application" : "nl"
        }
    ],
    "resourceSets": [
        {
           "type"                      : "resx",
           "pathRegex"                 : "\\/BL\\/Common\\/Resources\\/.*\\.resx",
           "translationPathExpression" : "/BL/translated/${originalFile.baseName}_${locale}.${originalFile.extension}",
           "translationCommitMessage"  : "Translate ${originalFile.fullName} to ${locale}"
        }
    ]
}
