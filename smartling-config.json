{
  // It's still mandatory, but can be overrided in each resourceSet
  "locales": [
    {
      "smartling": "zh-CN",
      "application": "zh_Hans"
    },
    {
      "smartling": "nl-NL",
      "application": "nl_NL"
    }
  ],
  "resourceSets": [
    // Upload java-app.properties for es, nl-NL
    {
      "pathRegex": "messages/java-app\\.properties",
      "translationPathExpression": "/translated/${originalFile.baseName}_${locale}.${originalFile.extension}",
      "type": "javaProperties",
      "locales": [
        {
          "smartling": "es",
          "application": "es_ES"
        },
        {
          "smartling": "nl-NL",
          "application": "nl_NL"
        }
      ]
    },
    // Upload messages.properties just for for zh-CH
    {
      "pathRegex": "messages/messages\\.properties",
      "translationPathExpression": "/translated/${originalFile.baseName}_${locale}.${originalFile.extension}",
      "type": "javaProperties",
      "locales": [
        {
          "smartling": "zh-CN",
          "application": "zh_Hans"
        }
      ]
    },
    // Upload test.properties for default locales set: zh-CH, nl-NL
    {
      "pathRegex": "messages/test\\.properties",
      "translationPathExpression": "/translated/${originalFile.baseName}_${locale}.${originalFile.extension}",
      "type": "javaProperties"
    }
  ]
}
