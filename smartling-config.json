{
    "locales" : [
        {
            "smartling"   : "zh-CN",
            "application" : "zh_Hans"
        },
        {
            "smartling"   : "nl-NL",
            "application" : "nl_NL"
        }
    ],
    "resourceSets": [
        {
            "pathRegex"                 : "[^\\/]+\\/[^\\/]+\\.properties",
            // Variable ${originalFile.path} already has trailing slash, see https://docs.smartling.com/pages/Repository-Connector/Translation-Settings/
            "translationPathExpression" : "${originalFile.path}${locale}/${originalFile.name}",
            "type"                      : "javaProperties"
        }
    ]
}
